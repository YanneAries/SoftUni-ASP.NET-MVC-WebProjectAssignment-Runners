@using RunningWebApp.ViewModels;
@model UserViewModel

@{
    ViewData["Title"] = "User Details";
}

<!-- Page Content -->
<div class="container">

    <!-- Item Heading -->
    <h1 class="my-4">
        @Model.UserName
        <small> - Empty username page template</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.ProfileImageUrl" alt="No image has been set yet">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Stats</h3>
            <p>Pace: @Model.Pace</p>
            <p>Mileage: @Model.Mileage</p>
            <h3 class="my-3">Location</h3>
            <ul>
              <li>X</li>
              <li>Y</li>
              <li>Z</li>
            </ul>
        </div>

    </div>
</div>
